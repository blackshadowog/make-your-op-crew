        });

        // Add smooth scrolling
        document.documentElement.style.scrollBehavior = 'smooth';

        // Add dynamic background elements
        function addBackgroundElements() {
            const bg = document.createElement('div');
            bg.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                pointer-events: none;
                z-index: 0;
                background-image: 
                    radial-gradient(circle at 20% 30%, rgba(255, 215, 0, 0.1) 0%, transparent 50%),
                    radial-gradient(circle at 80% 70%, rgba(220, 38, 38, 0.1) 0%, transparent 50%),
                    radial-gradient(circle at 40% 80%, rgba(3, 105, 161, 0.1) 0%, transparent 50%);
                animation: backgroundShift 12s infinite ease-in-out;
            `;
            document.body.appendChild(bg);
        }

        addBackgroundElements();

        // Add CSS for background animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes backgroundShift {
                0%, 100% { opacity: 0.3; transform: scale(1); }
                33% { opacity: 0.5; transform: scale(1.1); }
                66% { opacity: 0.4; transform: scale(0.9); }
            }
            
            /* Add custom scrollbar */
            ::-webkit-scrollbar { width: 8px; }
            ::-webkit-scrollbar-track { background: var(--dark-navy); }
            ::-webkit-scrollbar-thumb { 
                background: var(--primary-gold); 
                border-radius: 4px; 
            }
            ::-webkit-scrollbar-thumb:hover { background: var(--treasure-orange); }
        `;
        document.head.appendChild(style);
    </script>
