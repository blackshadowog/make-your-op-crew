        }, {
            name: "Ryuma",
            bounty: 8400000000
        }];

        let currentRoleIndex = 0;
        let chosenCrew = [];

        function formatBounty(num) {
            return num.toLocaleString("en-US") + " ฿";
        }

        function showOptions() {
            const role = roles[currentRoleIndex];
            const gameArea = document.getElementById("gameArea");
            gameArea.innerHTML = `<h2>Select your <span class="role">${role}</span></h2>`;

            // Pick 5 unique random options
            let options = [];
            let availableCharacters = characters.filter(c => !chosenCrew.find(ch => ch.name === c.name));
            while (options.length < 5 && availableCharacters.length > 0) {
                const idx = Math.floor(Math.random() * availableCharacters.length);
                options.push(availableCharacters[idx]);
                availableCharacters.splice(idx, 1);
            }

            const container = document.createElement("div");
            container.className = "options-container";

            options.forEach(c => {
                const card = document.createElement("div");
                card.className = "option-card";
                card.innerHTML = `
                    <h3>${c.name}</h3>
                    <div class="bounty">Bounty: ${formatBounty(c.bounty)}</div>
                `;
                card.onclick = () => {
                    // Add selection effect
                    card.style.transform = 'scale(0.95)';
                    card.style.borderColor = 'var(--treasure-orange)';
                    setTimeout(() => chooseMember(c), 200);
                };
                container.appendChild(card);
            });

            gameArea.appendChild(container);
        }

        function chooseMember(member) {
            chosenCrew.push({...member,
                role: roles[currentRoleIndex]
            });
            currentRoleIndex++;

            if (currentRoleIndex < roles.length) {
                // Add transition effect
                const gameArea = document.getElementById("gameArea");
                gameArea.style.opacity = '0';
                gameArea.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    showOptions();
                    gameArea.style.opacity = '1';
                    gameArea.style.transform = 'translateY(0)';
                }, 300);
            } else {
                displayCrew();
            }
        }

        function displayCrew() {
            const gameArea = document.getElementById("gameArea");
            gameArea.innerHTML = `
                <div style="text-align: center; margin-bottom: 30px;">
                    <h2 style="color: var(--primary-gold); font-size: 36px; margin-bottom: 10px;">🎉 Your Legendary Crew is Complete! 🎉</h2>
                    <p style="font-size: 18px; color: #94A3B8;">The Grand Line awaits your adventures!</p>
                </div>
            `;

            const crewContainer = document.getElementById("crew");
            crewContainer.innerHTML = "";
            let total = 0;

            chosenCrew.forEach((m, index) => {
                total += m.bounty;
                const card = document.createElement("div");
                card.className = "member-card";
                card.innerHTML = `
                    <div style="position: relative;">
                        <h3>${m.name}</h3>
                        <p class="role">${m.role}</p>
                        <p class="bounty">Bounty: ${formatBounty(m.bounty)}</p>
                        <div style="position: absolute; top: -10px; right: -10px; background: var(--accent-red); color: white; border-radius: 50%; width: 30px; height: 30px; display: flex; align-items: center; justify-content: center; font-weight: bold; font-size: 14px;">
                            ${index + 1}
                        </div>
                    </div>
                `;
                crewContainer.appendChild(card);
            });

            // Create enhanced total bounty display
            const totalElement = document.getElementById("totalBounty");
            totalElement.innerHTML = `
                <div style="display: flex; align-items: center; justify-content: center; gap: 20px;">
                    <span style="font-size: 48px;">💰</span>
                    <div>
                        <div style="font-size: 18px; color: #94A3B8; margin-bottom: 5px;">Total Crew Bounty</div>
                        <div style="font-size: 28px;">${formatBounty(total)}</div>
                        <div style="font-size: 14px; color: #94A3B8; margin-top: 5px;">
                            ${total >= 10000000000 ? "🔥 Legendary Status!" : 
                              total >= 5000000000 ? "⚡ Yonko Level!" : 
                              total >= 2000000000 ? "🌟 Supernova Crew!" : 
                              total >= 500000000 ? "💪 Rising Pirates!" : 
                              "🌱 Rookie Crew!"}
                        </div>
                    </div>
                    <span style="font-size: 48px;">🏴‍☠️</span>
                </div>
            `;

            // Create enhanced restart button
            const restartBtn = document.createElement("button");
            restartBtn.innerHTML = `
                <span style="margin-right: 10px;">🔄</span>
                Build Another Crew
                <span style="margin-left: 10px;">⚓</span>
            `;
